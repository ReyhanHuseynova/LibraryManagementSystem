@model List<Author>
<div class="col-12" style="margin-top:30px">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Categories Table</h6>
        <a asp-action="Create" class="btn btn-primary" style="margin-bottom:5px">Create</a>




        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Book Name</th>
                    <th scope="col">Author Name</th>
                    <th scope="col">Author Last Name</th>
                  <th scope="col">Status</th>
                    <th scope="col" style="text-align:right">Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var author in Model)
                {
                    <tr>
                        <th scope="row">@author.Id</th>
                        <td>@author.BookName</td>
                        <td>@author.FirstName</td>
                        <td>@author.LastName</td>
                        <td>
                            @if (author.IsDeactive)
                            {
                                <div class="badge badge-danger">Passiv</div>

                            }
                            else
                            {
                                <div class="badge badge-success">Active</div>
                            }
                        </td>

                        <td>
                            <div class="d-flex justify-content-end">
                                <div style="margin-right:5px">
                                    <a asp-action="Update" asp-route-id="@author.Id" class="btn btn-info">Update</a>
                                </div>
                                @*<div style="margin-right:5px">
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">Detail</a>
                            </div>*@

                                @if (author.IsDeactive)
                                {

                                    <div style="margin-right:5px">
                                        <a asp-action="Activity" asp-route-id="@author.Id" class="btn btn-success">Activate</a>
                                    </div>
                                }
                                else
                                {

                                    <div style="margin-right:5px">
                                        <a asp-action="Activity" asp-route-id="@author.Id" class="btn btn-danger">Deactivate</a>
                                    </div>
                                }

                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

