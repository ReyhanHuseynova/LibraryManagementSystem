@model ResetPasswordVM
<div class="col-sm-12 col-xl-9" style="margin-top:30px; margin-left:50px">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Create Category</h6>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form method="post">
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="CheckPassword" class="form-label"></label>
                <textarea asp-for="CheckPassword" class="form-control"></textarea>
                <span asp-validation-for="CheckPassword" class="text-danger"></span>
            </div>
           
             <div>
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-dark">Back</a>
            </div>

        </form>
    </div>
</div>
