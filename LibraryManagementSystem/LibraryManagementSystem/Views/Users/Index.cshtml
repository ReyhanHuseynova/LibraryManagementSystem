@model List<UserVM>
<div class="col-12" style="margin-top:30px">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Categories Table</h6>
        <a asp-action="Create" class="btn btn-primary" style="margin-bottom:5px">Create</a>




        <table class="table table-dark">
            <thead>
                <tr>
                   
                    <th scope="col">FullName</th>
                    <th scope="col">UserName</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col">Status</th>
                    <th scope="col" style="text-align:right">Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var user in Model)
                {
                    <tr>
                       
                        <td>@user.FullName</td>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            @if (user.IsDeactive)
                            {
                                <div class="badge badge-danger">Passiv</div>

                            }
                            else
                            {
                                <div class="badge badge-success">Active</div>
                            }
                        </td>

                        <td>
                            <div class="d-flex justify-content-end">
                                <div style="margin-right:5px">
                                    <a asp-action="Update" asp-route-id="@user.Id" class="btn btn-info">Update</a>
                                </div>
                                <div style="margin-right:5px">
                            <a asp-action="ResetPassword" asp-route-id="@user.Id" class="btn btn-success">ResetPassword</a>
                            </div>
                                @if (user.Username != User.Identity.Name)
                                {
                                    @if (user.IsDeactive)
                                    {

                                        <div style="margin-right:5px">
                                            <a asp-action="Activity" asp-route-id="@user.Id" class="btn btn-success">Activate</a>
                                        </div>
                                    }
                                    else
                                    {

                                        <div style="margin-right:5px">
                                            <a asp-action="Activity" asp-route-id="@user.Id" class="btn btn-danger">Deactivate</a>
                                        </div>
                                    }
                                }
                                

                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
