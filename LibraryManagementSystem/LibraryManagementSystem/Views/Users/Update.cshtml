@model UpdateVM
<div class="col-sm-12 col-xl-9" style="margin-top:30px; margin-left:50px">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Create Category</h6>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="Surname" class="form-label"></label>
                <textarea asp-for="Surname" class="form-control"></textarea>
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <textarea asp-for="Username" class="form-control"></textarea>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <textarea asp-for="Email" class="form-control"></textarea>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select class="form-select" name="roleName"
                        aria-label="Floating label select example">
                    <option selected>Open this select menu</option>
                    @if (Model.Role == "Admin")
                    {

                        <option selected value="Admin">Admin</option>
                        <option value="Member">Member</option>
                    }
                    else
                    {

                        <option value="Admin">Admin</option>
                        <option selected value="Member">Member</option>
                    }

                </select>
                <label for="floatingSelect">Select Role</label>
            </div>
       
            <div>
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-dark">Back</a>
            </div>

        </form>
    </div>
</div>
