@model HomeVM
<div class="col-12" style="margin-top:30px">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Book Management</h6>

        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Book Name</th>
                    <th scope="col">Author Name</th>
                    <th scope="col">Author Last Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Publiser</th>
                    <th scope="col">Rack</th>
                    <th scope="col">Book Status</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var author in Model.Authors)
                {
                    <tr>
                        <th scope="row">@author.Id</th>
                        <td>@author.BookName</td>
                        <td>@author.FirstName</td>
                        <td>@author.LastName</td>
                        <td>@author.Category.CategoryName</td>
                        <td>@author.Publiser.FirstName @author.Publiser.LastName </td>
                        <td>@author.Rack.RackNumber</td>

                        <td>
                            @if (author.IsDeactive)
                            {
                                <div class="badge badge-danger">Passiv</div>

                            }
                            else
                            {
                                <div class="badge badge-success">Active</div>
                            }
                        </td>

                      

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

