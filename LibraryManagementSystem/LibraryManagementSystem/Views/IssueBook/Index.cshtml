@model List<IssueBook>
<div class="col-12" style="margin-top:30px">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Issue Book Table</h6>
        <a asp-action="Create" class="btn btn-primary" style="margin-bottom:5px">Create</a>




        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Book Name</th>
                    <th scope="col">Role</th>
                    <th scope="col">Issue Date</th>
                    <th scope="col">Return Date</th>
                    <th scope="col">Status</th>
                    <th scope="col" style="text-align:right">Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var s in Model)
                {
                    <tr>
                        <th scope="row">@s.Id</th>
                        <td>@s.Author.BookName</td>
                        <td>
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="badge badge-danger">Admin</div>

                            }
                          
                        </td>
                    
                        <td>@s.IssueDate</td>
                        <td>@s.ReturnDate</td>
                        <td>
                            @if (s.IsDeactive)
                            {
                                <div class="badge badge-danger">Passiv</div>

                            }
                            else
                            {
                                <div class="badge badge-success">Active</div>
                            }
                        </td>

                        <td>
                            <div class="d-flex justify-content-end">
                                <div style="margin-right:5px">
                                    <a asp-action="Update" asp-route-id="@s.Id" class="btn btn-info">Update</a>
                                </div>
                             

                                @if (s.IsDeactive)
                                {

                                    <div style="margin-right:5px">
                                        <a asp-action="Activity" asp-route-id="@s.Id" class="btn btn-success">Activate</a>
                                    </div>
                                }
                                else
                                {

                                    <div style="margin-right:5px">
                                        <a asp-action="Activity" asp-route-id="@s.Id" class="btn btn-danger">Deactivate</a>
                                    </div>
                                }

                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
