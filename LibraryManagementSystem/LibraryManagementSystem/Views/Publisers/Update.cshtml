@model Publiser
<div class="col-sm-12 col-xl-9" style="margin-top:30px; margin-left:50px">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Update Publiser</h6>
        <form method="post">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control">
